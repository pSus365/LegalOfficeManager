@model UserModel

@{
    Layout = null;
}


<h2>Logowanie</h2>

<form asp-action="Login" method="post">
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" style="color:red"></span>
    </div>
    <div>
        <label asp-for="PasswordHash">Password</label>
        <input asp-for="PasswordHash" type="password" />
        <span asp-validation-for="PasswordHash" style="color:red"></span>
    </div>
    <button type="submit" asp-action="Login" asp-controller="LogInPage">Zaloguj sie</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
