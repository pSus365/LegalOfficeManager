@model List<LegalOfficeEntry>

<div class = "table-responsive">
    <table class = "table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>CaseType</th>
                <th>Status</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.Name</td>
                    <td>@entry.Surname</td>
                    <td>@entry.CaseType</td>
                    <td>@entry.Status</td>
                    <td>@entry.Notes</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@entry.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@entry.Id">Delete</a>
                </tr>
            }
    </table>
</div>