@model List<LegalOfficeEntry>

<div class = "container">
    <div class = "row pt-4">
        <div class = "col-6">
            <a class= "btn btn-primary" asp-controller="LegalOfficeEntries" asp-action="Create">
                Add New Case &nbsp;
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                </svg>
            </a>
        </div>
        <div class="col-6 text-end">
            <h2>Current Clients and Cases</h2>
        </div>
    </div>
    
</div>

<div class = "table-responsive">
    <table class = "table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>CaseType</th>
                <th>Status</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.Name</td>
                    <td>@entry.Surname</td>
                    <td>@entry.CaseType</td>
                    <td>@entry.Status</td>
                    <td>@entry.Notes</td>
                    <td>
                        <a asp-controller="LegalOfficeEntries" asp-action="Edit" asp-route-id="@entry.Id">Edit</a> |
                        <a asp-controller="LegalOfficeEntries" asp-action="Delete" asp-route-id="@entry.Id">Delete</a>
                </tr>
            }
    </table>
</div>