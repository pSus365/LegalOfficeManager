@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-body p-5">
                    <h1 class="card-title text-center mb-4">
                        <i class="bi bi-shield-lock-fill me-2 text-primary"></i>Privacy Policy
                    </h1>

                    <p class="text-muted fst-italic text-center mb-5">
                        Last updated: @DateTime.Now.ToString("dd MMMM, yyyy")
                    </p>

                    <section class="mb-4">
                        <h4 class="text-primary">1. Information Collection</h4>
                        <p>
                            We collect personal information such as name, email, phone number, and case-related details
                            to provide legal office management services.
                        </p>
                    </section>

                    <section class="mb-4">
                        <h4 class="text-primary">2. Use of Information</h4>
                        <p>
                            Your information is used solely for client management, internal documentation, and communication
                            related to your case. We do not share your data with third parties without your consent.
                        </p>
                    </section>

                    <section class="mb-4">
                        <h4 class="text-primary">3. Data Security</h4>
                        <p>
                            All data is stored securely and access is restricted to authorized personnel. We use encryption
                            and security protocols to protect your information.
                        </p>
                    </section>

                    <section class="mb-4">
                        <h4 class="text-primary">4. Cookies</h4>
                        <p>
                            Our platform may use cookies to improve user experience. You can disable cookies in your browser
                            settings if preferred.
                        </p>
                    </section>

                    <section class="mb-4">
                        <h4 class="text-primary">5. User Rights</h4>
                        <p>
                            You have the right to access, correct, or delete your data at any time. Contact us to make a request.
                        </p>
                    </section>

                    <section class="mb-4">
                        <h4 class="text-primary">6. Contact</h4>
                        <p>
                            For any questions regarding this Privacy Policy, please contact us at:
                            <br /><strong>Email:</strong> support@legaloffice.com.
                            Or use our <strong>contact form.</strong>
                        </p>
                    </section>

                    <div class="text-center mt-5">
                        <a class="btn btn-outline-primary rounded-pill px-4 py-2"
                           asp-controller="Home" asp-action="Index">
                            <i class="bi bi-arrow-left"></i> Back to Home
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

