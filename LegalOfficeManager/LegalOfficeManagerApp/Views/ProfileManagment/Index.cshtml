@model ApplicationUser
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-5">
    <h2 class="mb-4">My Profile</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <img src="~/images/user-avatar.png" alt="Profile Picture" class="rounded-circle mb-3" width="120" />
                    <h5 class="card-title">@Model.LastName @Model.FirstName</h5>
                    <p class="card-text text-muted">@Model.Email</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Account Details</h5>
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="@Model.FirstName" class="form-label">First Name</label>
                            <input asp-for="@Model.FirstName" class="form-control" />
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.LastName" class="form-label">Last Name</label>
                            <input asp-for="@Model.LastName" class="form-control" />
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.Gender" class="form-label">Gender</label>
                            <input asp-for="@Model.Gender" class="form-control" />
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.Email" class="form-label">Email</label>
                            <input asp-for="@Model.Email" class="form-control" />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="@Model.PhoneNumber" class="form-control" />
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-success">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
